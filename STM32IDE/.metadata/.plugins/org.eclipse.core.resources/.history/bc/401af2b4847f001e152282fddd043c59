#include "fsm_display.h"

enum DisplayState {
	INIT,
	NORMAL_STATE,
	BLINKY_RED,
	BLINKY_YELLOW,
	BLINKY_GREEN
};

enum DisplayState displayState = INIT;
void fsm_display_run(void) {
	switch(displayState) {
		case INIT:
			break;
		case NORMAL_STATE:
			if(is_button_pressed(0));
			break;
		case BLINKY_RED:
			break;
		case BLINKY_YELLOW:
			break;
		case BLINKY_GREEN:
			break;
		default:
			break;
	}
}
